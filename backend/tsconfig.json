{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2018",
    "sourceRoot": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true, // TODO: chang back to true
    "removeComments": true,
    "preserveConstEnums": true
  },
  "lib": [
    "ES2018"
  ],
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}